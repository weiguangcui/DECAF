---
const rawBASE = (import.meta as any).env?.BASE_URL ?? '/';
const BASE = rawBASE.endsWith('/') ? rawBASE : `${rawBASE}/`;
---
<style>
  a {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  img {
    display: block;
    height: 50px;
    width: auto;
  }

  @media screen and (max-width: 520px) {
    img {
      display: none;
    }
  }
</style>

<a href={BASE}>
  <img alt="Blog Logo" src={`${BASE}assets/DFT.png`} />
  <img alt="Blog Logo" src={`${BASE}assets/ciaff.jpg`} />
  <img alt="Blog Logo" src={`${BASE}assets/ift.png`} />
</a>
