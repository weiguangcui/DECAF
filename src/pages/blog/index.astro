---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPastEvents } from '../../lib/events';

const title = 'Events';
const description = 'Past Events';
const permalink = `${Astro.site.href}events`;
const BASE: string = (import.meta as any).env?.BASE_URL || '/';
const pastEvents = await getPastEvents();
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <div class="container">
    <h1>Past Events</h1>
    {pastEvents.length > 0 ? (
      <div class="events-list">
        {pastEvents.map((ev) => (
          <div class="event-item" id={ev.dir}>
            <h2 class="event-title">
              {ev.title || ev.dir}
              <a class="event-permalink" href={`#${encodeURIComponent(ev.dir)}`} aria-label="Permalink">¬∂</a>
            </h2>
            <p class="event-meta">
              {ev.speaker ? ev.speaker : ''}
              {ev.affiliation ? ` (${ev.affiliation})` : ''}
              {ev.date ? ` ‚Ä¢ ${ev.date}` : ''}
              {ev.time ? ` ‚Ä¢ ${ev.time}` : ''}
              {ev.location ? ` ‚Ä¢ ${ev.location}` : ''}
            </p>
            {ev.excerpt ? <p class="event-excerpt">{ev.excerpt}</p> : null}
            <div class="event-links">
              {ev.imagePath && (
                <a href={ev.imagePath.startsWith('/') ? `${BASE}${ev.imagePath.slice(1)}` : `${BASE}${ev.imagePath}`} class="event-link" target="_blank" rel="noopener noreferrer">
                  üìÑ Poster
                </a>
              )}
              {ev.slidesUrl && (
                <a href={ev.slidesUrl.startsWith('/') ? `${BASE}${ev.slidesUrl.slice(1)}` : `${BASE}${ev.slidesUrl}`} class="event-link" target="_blank" rel="noopener noreferrer">
                  üìä Slides
                </a>
              )}
              {ev.videoUrl && (
                <a href={ev.videoUrl.startsWith('/') ? `${BASE}${ev.videoUrl.slice(1)}` : `${BASE}${ev.videoUrl}`} class="event-link" target="_blank" rel="noopener noreferrer">
                  ‚ñ∂Ô∏è Video
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <p>No past events found.</p>
    )}

  </div>
</BaseLayout>

<style>
  .events-list {
    margin-bottom: 40px;
  }
  .event-item + .event-item {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid var(--border-color, #e5e7eb);
  }
  .event-title {
    font-family: var(--font-family-sans);
    font-weight: 700;
    margin: 0 0 6px 0;
  }
  .event-links {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .event-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-bg-secondary);
    border-radius: 4px;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9em;
    transition: background-color 0.2s;
  }
  .event-link:hover {
    background: var(--color-bg-tertiary);
    text-decoration: none;
  }
  .event-title .event-permalink {
    font-weight: 400;
    margin-left: .5em;
    opacity: .5;
    text-decoration: none;
  }
  .event-title .event-permalink:hover {
    opacity: 1;
  }
  .event-meta {
    color: var(--text-secondary);
    margin: 0 0 6px 0;
  }
  .event-excerpt {
    margin: 0;
  }
  
</style>
