---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPastEvents } from '../../lib/events';

const title = 'Events';
const description = 'Past Events';
const permalink = `${Astro.site.href}events`;

const pastEvents = await getPastEvents();
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <div class="container">
    <h1>Past Events</h1>
    {pastEvents.length > 0 ? (
      <div class="events-list">
        {pastEvents.map((ev) => (
          <div class="event-item" id={ev.dir}>
            <h2 class="event-title">
              {ev.title || ev.dir}
              <a class="event-permalink" href={`#${encodeURIComponent(ev.dir)}`} aria-label="Permalink">¶</a>
            </h2>
            <p class="event-meta">
              {ev.speaker ? ev.speaker : ''}
              {ev.affiliation ? ` (${ev.affiliation})` : ''}
              {ev.date ? ` • ${ev.date}` : ''}
              {ev.time ? ` • ${ev.time}` : ''}
              {ev.location ? ` • ${ev.location}` : ''}
            </p>
            {ev.excerpt ? <p class="event-excerpt">{ev.excerpt}</p> : null}
          </div>
        ))}
      </div>
    ) : (
      <p>No past events found.</p>
    )}

  </div>
</BaseLayout>

<style>
  .events-list {
    margin-bottom: 40px;
  }
  .event-item + .event-item {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid var(--border-color, #e5e7eb);
  }
  .event-title {
    font-family: var(--font-family-sans);
    font-weight: 700;
    margin: 0 0 6px 0;
  }
  .event-title .event-permalink {
    font-weight: 400;
    margin-left: .5em;
    opacity: .5;
    text-decoration: none;
  }
  .event-title .event-permalink:hover {
    opacity: 1;
  }
  .event-meta {
    color: var(--text-secondary);
    margin: 0 0 6px 0;
  }
  .event-excerpt {
    margin: 0;
  }
  
</style>
